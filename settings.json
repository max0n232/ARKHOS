{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\session-start\\init-memory.js",
            "timeout": 5000,
            "statusMessage": "Initializing session..."
          },
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\session-start\\scan-lifecycle.js",
            "timeout": 10000,
            "statusMessage": "Checking lifecycle..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\session-end\\cleanup.js",
            "timeout": 30000,
            "statusMessage": "Cleaning up..."
          },
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\session-end\\auto-cleanup.js",
            "timeout": 15000,
            "statusMessage": "Auto-cleanup..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\pre-tool-use\\validate-bash.js",
            "timeout": 5000,
            "statusMessage": "Validating command..."
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\pre-tool-use\\validate-file-access.js",
            "timeout": 5000,
            "statusMessage": "Validating file access..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Write|Edit|Read",
        "hooks": [
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\post-tool-use\\audit-log.js",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\post-tool-use\\pattern-analyzer.js",
            "timeout": 3000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\stop\\pattern-detector.js",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\pre-compact\\save-state.js",
            "timeout": 5000,
            "statusMessage": "Saving state before compact..."
          },
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\pre-compact\\pattern-reporter.js",
            "timeout": 30000,
            "statusMessage": "Analyzing patterns..."
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node C:\\Users\\sorte\\.claude\\hooks\\subagent-start\\audit-log.js agent-start",
            "timeout": 3000
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(npm *)",
      "Bash(node *)",
      "Bash(git *)",
      "Bash(mkdir *)",
      "Bash(ls *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)"
    ]
  },
  "enabledPlugins": {
    "claude-wordpress-skills@claude-wordpress-skills": true,
    "superpowers@superpowers-marketplace": true
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  }
}
